<h1>
  Edit bookmark #<%= @bookmark.id %>
</h1>

<hr>

<form action="/update_bookmark/<%= @bookmark.id %>" method="post">

  <div class="form-group">
    
    <input type="hidden" id="user_id" name="user_id" value="<%= @bookmark.user_id %>">
  </div>

  <div class="form-group">
    <label for="movie_id">
      Movie
    </label>

    <%= select_tag("movie_id", options_from_collection_for_select(Movie.all, :id, :title, @bookmark.try(:movie_id)), :class => "form-control") %>

  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update bookmark
  </button>
</form>

<hr>

<a href="/bookmarks">
  Go back
</a>
